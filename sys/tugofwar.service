[Unit]
Description=Hunt2020 Tug Of War (tugofwar)

[Service]
Type=simple
Environment=HUNT2020_BASE=/sites/hunt2020
Environment=PYTHONPATH=/sites/hunt2020/snellen/src
WorkingDirectory=/sites/hunt2020/tugofwar
ExecStartPre=mkdir -p /run/sites
ExecStart=/sites/hunt2020/tugofwar/tugofwar.py \
  --socket_path /run/sites/tugofwar

[Install]
WantedBy=hunt2020.target

